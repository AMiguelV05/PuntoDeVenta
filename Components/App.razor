<body>
    <Routes />
    <script src="_framework/blazor.web.js"></script>
    <script>
        let componentInstance = null;
        let paymentModal = null;

        window.setupKeyboardShortcuts = (dotNetObjectReference) => {
            componentInstance = dotNetObjectReference;
            
            // Inicializar el modal de Bootstrap
            const modalElement = document.getElementById('paymentModal');
            if (modalElement) {
                paymentModal = new bootstrap.Modal(modalElement);
            }

            document.addEventListener('keydown', (event) => {
                // Capturar F12 para Cobrar
                if (event.key === 'F12' && !event.defaultPrevented) {
                    event.preventDefault(); // Evita que el navegador abra las herramientas de desarrollador
                    if (componentInstance) {
                        componentInstance.invokeMethodAsync('HandleF12Shortcut');
                    }
                }
                
                // Capturar Escape (Esc) para Cancelar Venta
                if (event.key === 'Escape' && !event.defaultPrevented) {
                    // Lógica para LimpiarVenta o simplemente cerrar el modal si está abierto
                }
            });
        };

        window.showPaymentModal = () => {
            if (paymentModal) {
                paymentModal.show();
            }
        };

        window.hidePaymentModal = () => {
            if (paymentModal) {
                paymentModal.hide();
            }
        };
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
