    <script>
            // Inicializar el modal de Bootstrap
            window.bootstrapModalFunctions = {
            show: function (elementId) {
                var el = document.getElementById(elementId);
                if (el) {
                    // getOrCreateInstance es más seguro: si ya existe, lo usa; si no, lo crea.
                    var modal = bootstrap.Modal.getOrCreateInstance(el);
                    modal.show();
                }
            },
            hide: function (elementId) {
                var el = document.getElementById(elementId);
                if (el) {
                    var modal = bootstrap.Modal.getInstance(el);
                    if (modal) {
                        modal.hide();
                    }
                }
            }
        };
    </script>

    <script>
        let componentInstance = null;

        window.setupKeyboardShortcuts = (dotNetObjectReference) => {
            componentInstance = dotNetObjectReference;
        };

        document.addEventListener('keydown', (event) => {
            // F12: Cobrar
            if (event.key === 'F12' && !event.defaultPrevented) {
                event.preventDefault(); 
                if (componentInstance) {
                    componentInstance.invokeMethodAsync('HandleF12Shortcut');
                }
            }
            
            // Escape: Cancelar/Salir
            if (event.key === 'Escape' && !event.defaultPrevented) {
