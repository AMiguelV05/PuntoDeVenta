@page "/categorias"
@rendermode InteractiveServer
@using Microsoft.EntityFrameworkCore
@using PuntoDeVenta.Data
@inject IDbContextFactory<ApplicationDbContext> DbFactory
@inject NavigationManager NavManager
@inject IJSRuntime JSRuntime
@inject NotificationService Notifier
@inject EstadoAutenticacionService AuthService

<PageTitle>Gestión de Categorías</PageTitle>

<div class="container-fluid pt-3">
    
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="text-primary m-0">
            <i class="bi bi-tags-fill me-2"></i>Directorio de Categorías
        </h3>
        <button class="btn btn-success shadow-sm" @onclick="IniciarNuevaCategoria">
            <i class="bi bi-plus-lg me-2"></i>Nueva Categoría
        </button>
    </div>

    <div class="card shadow-lg border-0">
        <div class="card-header bg-white py-3">
            <div class="row align-items-center">
                <div class="col">
                    <div class="input-group">
                        <span class="input-group-text bg-light text-primary border-end-0">
                            <i class="bi bi-search"></i>
                        </span>
                        <InputText @bind-Value="terminoBusqueda" 
                                   class="form-control border-control-lg" 
                                   placeholder="Buscar categoría..." 
                                   @oninput="FiltrarCategorias" />
                        <button class="btn btn-outline-secondary" type="button" @onclick="LimpiarBusqueda">
                            <i class="bi bi-x-lg"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <div class="card-body p-0">
            @if (categoriasFiltradas == null)
            {
                <div class="p-4 text-center text-muted">
                    <div class="spinner-border text-primary mb-2" role="status"></div>
                    <p>Cargando categorías...</p>
                </div>
            }
            else if (!categoriasFiltradas.Any())
            {
                <div class="p-4 text-center text-muted">
                    <i class="bi bi-search display-4 mb-3"></i>
                    <p class="fs-5">No se encontraron categorías con '<strong>@terminoBusqueda</strong>'.</p>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover table-striped align-middle mb-0">
                        <thead class="table-dark">
                            <tr>
                                <th class="text-center"><i class="bi bi-tag me-2"></i>Nombre de Categoría</th>
                                <th class="text-center"><i class="bi bi-boxes me-2"></i>Productos Asociados</th>
                                <th class="text-center">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var cat in categoriasFiltradas)
                            {
                                <tr>
                                    <td class="fw-bold text-secondary">@cat.Nombre</td>
                                    <td class="text-center">
                                        <button class="btn btn-sm btn-primary">
                                            Ver Productos
                                        </button>
                                    </td>
                                    <td class="text-center pe-3">
                                        <div class="btn-group shadow-sm">
                                            <button class="btn btn-sm btn-outline-primary" 
                                                    @onclick="() => PrepararEdicion(cat)" 
                                                    title="Editar">
                                                <i class="bi bi-pencil-square"></i>
                                            </button>
                                            <button class="btn btn-sm btn-outline-danger" 
                                                    @onclick="() => SolicitarEliminacionCategoria(cat)" 
                                                    title="Eliminar">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
        <div class="card-footer bg-light py-3">
            <div class="row align-items-center">
                <div class="col-md-4 text-muted small mb-2 mb-md-0">
                    Mostrando @(categoriasFiltradas?.Count ?? 0) de @totalRegistros categorías.
                </div>
                <div class="col-md-8 d-flex justify-content-md-end justify-content-center">
                    <nav aria-label="Paginación de categorías">
                        <ul class="pagination pagination-sm mb-0 shadow-sm">
                            <li class="page-item @(paginaActual == 1 ? "disabled" : "")">
                                <button class="page-link" @onclick="() => CambiarPagina(paginaActual - 1)">
                                    <span aria-hidden="true">&laquo;</span>
                                </button>
                            </li>
                            <li class="page-item disabled">
                                <span class="page-link text-dark bg-white border-top border-bottom">
                                    Pág @paginaActual / @(totalPaginas == 0 ? 1 : totalPaginas)
                                </span>
                            </li>
                            <li class="page-item @(paginaActual == totalPaginas || totalPaginas == 0 ? "disabled" : "")">
                                <button class="page-link" @onclick="() => CambiarPagina(paginaActual + 1)">
                                    <span aria-hidden="true">&raquo;</span>
                                </button>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="categoriaModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow">
            <div class="modal-header @(editando ? "bg-warning" : "bg-success") text-white">
                <h5 class="modal-title">
                    <i class="bi @(editando ? "bi-pencil-square" : "bi-plus-circle-fill") me-2"></i>
                    @(editando ? "Editar Categoría" : "Nueva Categoría")
                </h5>
                <button type="button" class="btn-close btn-close-white" @onclick="CerrarModal"></button>
            </div>
            
            <EditForm Model="categoriaModel" OnValidSubmit="GuardarCategoria" FormName="gestionarCategorias">
                <DataAnnotationsValidator />
                
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label fw-bold text-secondary">Nombre:</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-tag"></i></span>
                            <InputText @bind-Value="categoriaModel.Nombre" class="form-control" placeholder="Ej. Bebidas" />
                        </div>
                        <ValidationMessage For="@(() => categoriaModel.Nombre)" class="text-danger small" />
                    </div>
                </div>
                
                <div class="modal-footer bg-light">
                    <button type="button" class="btn btn-secondary" @onclick="CerrarModal">Cancelar</button>
                    <button type="submit" class="btn @(editando ? "btn-warning" : "btn-success") px-4">
                        <i class="bi @(editando ? "bi-check-lg" : "bi-save") me-2"></i>
                        @(editando ? "Actualizar" : "Guardar")
                    </button>
                </div>
            </EditForm>
        </div>
    </div>
</div>

<div class="modal fade" id="confirmarEliminacionCatModal" tabindex="-1" aria-hidden="true" style="z-index: 1070;">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>Confirmar Eliminación
                </h5>
                <button type="button" class="btn-close btn-close-white" @onclick="CerrarModalEliminacion" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center p-4">
                <div class="mb-3 text-danger">
                    <i class="bi bi-trash3 display-1"></i>
                </div>
                <h5 class="mb-3">¿Estás seguro?</h5>
                <p class="text-muted mb-0">
                    Estás a punto de eliminar la categoría:
                </p>
                @if (categoriaAEliminar != null)
                {
                    <p class="fw-bold fs-5 text-dark mt-2">@categoriaAEliminar.Nombre</p>
                }
                <p class="text-muted small mt-3">
                    Esta acción es irreversible. Asegúrate de que no haya productos dependiendo de esta categoría.
                </p>
            </div>
            <div class="modal-footer bg-light justify-content-center">
                <button type="button" class="btn btn-secondary px-4" @onclick="CerrarModalEliminacion">
                    <i class="bi bi-x-lg me-2"></i>Cancelar
                </button>
                <button type="button" class="btn btn-danger px-4" @onclick="ConfirmarEliminacion">
                    <i class="bi bi-trash-fill me-2"></i>Sí, Eliminar
                </button>
            </div>
        </div>
    </div>
</div>

@code {
    private List<Categoria>? categoriasFiltradas;
    private Categoria categoriaModel = new();
    private Categoria? categoriaAEliminar;
    private List<Producto> listaProductos = new();
    private bool editando = false;
    private string terminoBusqueda = "";

    // Paginación
    private int paginaActual = 1;
    private int elementosPorPagina = 10;
    private int totalPaginas = 0;
    private int totalRegistros = 0;

    protected override async Task OnInitializedAsync()
    {
         if (AuthService.EmpleadoActual == null)
        {
            NavManager.NavigateTo("/login");
            return;
        }
        if (AuthService.EmpleadoActual.Puesto == "en espera")
        {
            _ = Notifier.SetMessage("Acceso no autorizado. Por favor, espera a que un Admin te conceda el acceso.", "warning", 3000);
            NavManager.NavigateTo("/");
            return;
        }
        await Task.WhenAll(CargarCategorias(), CargarProductos());
    }

    private async Task CargarCategorias()
    {
        using var db = DbFactory.CreateDbContext();
        var query = db.Categorias.AsNoTracking().AsQueryable();

        if (!string.IsNullOrWhiteSpace(terminoBusqueda))
        {
            var termino = terminoBusqueda.ToLower();
            query = query.Where(c => c.Nombre.ToLower().Contains(termino));
        }

        totalRegistros = await query.CountAsync();

        if (totalRegistros > 0)
            totalPaginas = (int)Math.Ceiling(totalRegistros / (double)elementosPorPagina);
        else
            totalPaginas = 0;

        categoriasFiltradas = await query
            .OrderBy(c => c.Nombre)
            .Skip((paginaActual - 1) * elementosPorPagina)
            .Take(elementosPorPagina)
            .ToListAsync();
    }

    private async Task CambiarPagina(int nuevaPagina)
    {
        if (nuevaPagina < 1 || nuevaPagina > totalPaginas) return;
        paginaActual = nuevaPagina;
        await CargarCategorias();
    }

    private async Task FiltrarCategorias(ChangeEventArgs e)
    {
        terminoBusqueda = e.Value?.ToString() ?? "";
        paginaActual = 1;
        await CargarCategorias();
    }

    private async Task LimpiarBusqueda()
    {
        terminoBusqueda = "";
        paginaActual = 1;
        await CargarCategorias();
    }

    private async Task IniciarNuevaCategoria()
    {
        categoriaModel = new();
        editando = false;
        await JSRuntime.InvokeVoidAsync("bootstrapModalFunctions.show", "categoriaModal");
    }

    private async Task PrepararEdicion(Categoria categoriaAEditar)
    {
        categoriaModel = new Categoria
        {
            CategoriaId = categoriaAEditar.CategoriaId,
            Nombre = categoriaAEditar.Nombre
        };
        editando = true;
        await JSRuntime.InvokeVoidAsync("bootstrapModalFunctions.show", "categoriaModal");
    }

    private async Task CerrarModal()
    {
        await JSRuntime.InvokeVoidAsync("bootstrapModalFunctions.hide", "categoriaModal");
        await Task.Delay(300); // Esperar animación
        categoriaModel = new();
        editando = false;
    }

    private async Task GuardarCategoria()
    {
        try
        {
            using var db = DbFactory.CreateDbContext();
            if (editando)
            {
                db.Categorias.Update(categoriaModel);
            }
            else
            {
                await db.Categorias.AddAsync(categoriaModel);
            }
            await db.SaveChangesAsync();
            await CargarCategorias();
            await CerrarModal();
            _ = Notifier.SetMessage(editando ? "Categoría actualizada." : "Categoría creada exitosamente.", "success", 3000);
        }
        catch (Exception ex)
        {
            _ = Notifier.SetMessage($"Error: {ex.Message}", "error", 5000);
        }
    }

    private async Task SolicitarEliminacionCategoria(Categoria categoria)
    {
        categoriaAEliminar = categoria;
        await JSRuntime.InvokeVoidAsync("bootstrapModalFunctions.show", "confirmarEliminacionCatModal");
    }

    private async Task ConfirmarEliminacion()
    {
        if (categoriaAEliminar == null) return;
        try
        {
            using var db = DbFactory.CreateDbContext();
            var cat = await db.Categorias.FindAsync(categoriaAEliminar.CategoriaId);
            if (cat != null)
            {
                db.Categorias.Remove(cat);
                await db.SaveChangesAsync();
                _ = Notifier.SetMessage($"Categoría '{categoriaAEliminar.Nombre}' eliminada.", "success");
                await CargarCategorias();
            }
        }
        catch (Exception)
        {
            _ = Notifier.SetMessage("Verifica que la categoría no esté asociada a algún producto", "warning", 5000);
        }
        finally
        {
            await CerrarModalEliminacion();
        }
    }

    private async Task CerrarModalEliminacion()
    {
        await JSRuntime.InvokeVoidAsync("bootstrapModalFunctions.hide", "confirmarEliminacionCatModal");
        categoriaAEliminar = null;
    }

    private async Task CargarProductos()
    {
        using var db = DbFactory.CreateDbContext();
        listaProductos = await db.Productos.AsNoTracking().OrderBy(p => p.Nombre).ToListAsync();
    }
}