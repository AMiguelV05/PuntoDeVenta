@page "/productos"
@rendermode InteractiveServer
@using Microsoft.EntityFrameworkCore
@using PuntoDeVenta.Data
@inject IDbContextFactory<ApplicationDbContext> DbFactory
@inject EstadoAutenticacionService AuthService
@inject NavigationManager NavManager
@inject NotificationService Notifier
@inject IJSRuntime JSRuntime

<PageTitle>Gestión de Productos</PageTitle>

<div class="container-fluid pt-3">
    
    <!-- Encabezado y Botón de Nuevo -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="text-primary m-0">
            <i class="bi bi-box-seam me-2"></i>Inventario de Productos
        </h3>
        <button class="btn btn-success shadow-sm" @onclick="IniciarNuevoProducto">
            <i class="bi bi-plus-lg me-2"></i>Nuevo Producto
        </button>
    </div>

    <!-- Tarjeta Principal (Tabla) -->
    <div class="card shadow-lg border-0">
        <div class="card-header bg-white py-3">
            <div class="row align-items-center">
                <div class="col">
                    <div class="input-group">
                        <span class="input-group-text bg-light text-primary border-end-0">
                            <i class="bi bi-search"></i>
                        </span>
                        <input type="text" 
                               class="form-control border-start-0" 
                               placeholder="Escribe para filtrar. Presiona ENTER para editar coincidencia SKU exacta" 
                               @bind="terminoBusqueda" 
                               @onkeyup="HandleKeyUp"
                               @oninput="AlEscribir" />

                         <button class="btn btn-outline-secondary" type="button" @onclick="LimpiarBusqueda">
                             <i class="bi bi-x-lg"></i>
                         </button>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-body p-0">
            @if (todosLosProductos == null)
            {
                <div class="p-4 text-center text-muted">
                    <div class="spinner-border text-primary mb-2" role="status"></div>
                    <p>Cargando inventario...</p>
                </div>
            }
            else if (!productosFiltrados.Any())
            {
                 <div class="p-4 text-center text-muted">
                    <i class="bi bi-inbox display-4 d-block mb-2"></i>
                    <p class="fs-5">No se encontraron productos con "<strong>@terminoBusqueda</strong>"</p>
                    <button class="btn btn-sm btn-outline-primary mt-2" @onclick="LimpiarBusqueda">Mostrar Todos</button>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover table-striped align-middle mb-0">
                        <thead class="table-dark">
                            <tr>
                                <th>SKU / Nombre</th>
                                <th class="text-center">Stock</th>
                                <th class="text-center">Precio Venta</th>
                                <th class="text-center" style="width: 150px;">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var prod in productosFiltrados)
                            {
                                <tr>
                                    <td>
                                        @if(!string.IsNullOrEmpty(prod.CodigoSku))
                                        {
                                            <span class="badge bg-light text-dark border mb-1">
                                                <i class="bi bi-upc-scan me-1"></i>@prod.CodigoSku
                                            </span>
                                            <br/>
                                        }
                                        <span class="fw-bold text-secondary">@prod.Nombre</span>
                                    </td>
                                    <td class="text-center">
                                        @if(prod.StockActual <= 5)
                                        {
                                            <span class="badge bg-danger rounded-pill">@prod.StockActual (Bajo)</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-info text-dark rounded-pill">@prod.StockActual</span>
                                        }
                                    </td>
                                    <td class="text-center text-success fw-bold">@prod.PrecioVenta.ToString("C")</td>
                                    <td class="text-center">
                                        <div class="btn-group shadow-sm" role="group">
                                            <button class="btn btn-sm btn-outline-primary" @onclick="() => PrepararEdicion(prod)" title="Editar">
                                                <i class="bi bi-pencil-square"></i>
                                            </button>
                                            <button class="btn btn-sm btn-outline-danger" @onclick="() => SolicitarEliminacion(prod)" title="Eliminar">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="card-footer bg-light text-muted small">
                    Mostrando @productosFiltrados.Count de @todosLosProductos.Count productos registrados.
                </div>
            }
        </div>
    </div>
</div>

<!-- Modal de Agregar/Editar -->
<div class="modal fade" id="productoModal" tabindex="-1" aria-labelledby="productoModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow">
            <div class="modal-header @(editando ? "bg-warning" : "bg-success") text-white">
                <h5 class="modal-title" id="productoModalLabel">
                    <i class="bi @(editando ? "bi-pencil-square" : "bi-plus-circle") me-2"></i>
                    @(editando ? "Editar Producto" : "Nuevo Producto")
                </h5>
                <button type="button" class="btn-close btn-close-white" @onclick="CerrarModal" aria-label="Close"></button>
            </div>
            
            <EditForm Model="productoModel" OnValidSubmit="GuardarProducto" FormName="gestionarProductos">
                <DataAnnotationsValidator />
                
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label fw-bold text-secondary">Código SKU (Opcional):</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-upc"></i></span>
                            <InputText @bind-Value="productoModel.CodigoSku" class="form-control" placeholder="Ej. 750123456" />
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold text-secondary">Nombre del Producto:</label>
                        <InputText @bind-Value="productoModel.Nombre" class="form-control" placeholder="Ej. Coca Cola 600ml" />
                        <ValidationMessage For="@(() => productoModel.Nombre)" class="text-danger small" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label small">Descripción (Opcional):</label>
                        <InputTextArea @bind-Value="productoModel.Descripcion" class="form-control form-control-sm" rows="3" />
                        <ValidationMessage For="@(() => productoModel.Descripcion)" class="text-danger small" />
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold text-secondary">Precio Compra:</label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <InputNumber TValue="decimal?" @bind-Value="productoModel.PrecioCompra" class="form-control" />
                            </div>
                            <ValidationMessage For="@(() => productoModel.PrecioCompra)" class="text-danger small" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold text-secondary">Precio Venta:</label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <InputNumber TValue="decimal" @bind-Value="productoModel.PrecioVenta" class="form-control" />
                            </div>
                            <ValidationMessage For="@(() => productoModel.PrecioVenta)" class="text-danger small" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold text-secondary">Stock Actual:</label>
                            <InputNumber TValue="decimal" @bind-Value="productoModel.StockActual" class="form-control" />
                            <ValidationMessage For="@(() => productoModel.StockActual)" class="text-danger small" />
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold text-secondary">Categoría:</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-tag"></i></span>
                            
                            <InputSelect @bind-Value="productoModel.CategoriaId" class="form-select">
                                <option value="">-- Seleccione una Categoría --</option>
                                @foreach (var cat in listaCategorias)
                                {
                                    <option value="@cat.CategoriaId">@cat.Nombre</option>
                                }
                            </InputSelect>

                            <button type="button" class="btn btn-outline-primary" @onclick="AbrirModalCategoria" title="Crear nueva categoría">
                                <i class="bi bi-plus-lg"></i>
                            </button>
                        </div>
                        <ValidationMessage For="@(() => productoModel.CategoriaId)" class="text-danger small" />
                    </div>
                </div>
                
                <div class="modal-footer bg-light">
                    <button type="button" class="btn btn-secondary" @onclick="CerrarModal">Cancelar</button>
                    <button type="submit" class="btn @(editando ? "btn-warning" : "btn-success") px-4">
                        @(editando ? "Actualizar Cambios" : "Guardar Producto")
                    </button>
                </div>
            </EditForm>
        </div>
    </div>
</div>
<div class="modal fade" id="categoriaModal" tabindex="-1" style="z-index: 1060;"> 
    <div class="modal-dialog modal-sm modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h6 class="modal-title">Nueva Categoría</h6>
                <button type="button" class="btn-close btn-close-white" @onclick="CerrarModalCategoria"></button>
            </div>
            <div class="modal-body">
                <EditForm Model="nuevaCategoriaModel" OnValidSubmit="GuardarCategoriaRapida">
                    <DataAnnotationsValidator />
                    <div class="mb-3">
                        <label class="form-label small">Nombre:</label>
                        <InputText @bind-Value="nuevaCategoriaModel.Nombre" class="form-control form-control-sm" placeholder="Ej. Bebidas" />
                        <ValidationMessage For="@(() => nuevaCategoriaModel.Nombre)" class="text-danger small" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label small">Descripción (Opcional):</label>
                        <InputTextArea @bind-Value="nuevaCategoriaModel.Descripcion" class="form-control form-control-sm" rows="3" />
                        <ValidationMessage For="@(() => nuevaCategoriaModel.Descripcion)" class="text-danger small" />
                    </div>
                    <div class="d-grid">
                        <button type="submit" class="btn btn-sm btn-primary">Guardar</button>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="confirmarEliminacionModal" tabindex="-1" aria-hidden="true" style="z-index: 1070;">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>Confirmar Eliminación
                </h5>
                <button type="button" class="btn-close btn-close-white" @onclick="CerrarModalEliminacion" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center p-4">
                <div class="mb-3 text-danger">
                    <i class="bi bi-trash3 display-1"></i>
                </div>
                <h5 class="mb-3">¿Estás seguro?</h5>
                <p class="text-muted mb-0">
                    Estás a punto de eliminar el producto:
                </p>
                @if (productoAEliminar != null)
                {
                    <p class="fw-bold fs-5 text-dark mt-2">@productoAEliminar.Nombre</p>
                    <p class="small text-secondary">SKU: @(productoAEliminar.CodigoSku ?? "N/A")</p>
                }
                <p class="text-muted small mt-3">
                    Esta acción es irreversible y podría afectar el historial de ventas si existen registros vinculados.
                </p>
            </div>
            <div class="modal-footer bg-light justify-content-center">
                <button type="button" class="btn btn-secondary px-4" @onclick="CerrarModalEliminacion">
                    <i class="bi bi-x-lg me-2"></i>Cancelar
                </button>
                <button type="button" class="btn btn-danger px-4" @onclick="ConfirmarEliminacion">
                    <i class="bi bi-trash-fill me-2"></i>Sí, Eliminar
                </button>
            </div>
        </div>
    </div>
</div>

@code {
    private string terminoBusqueda = "";
    private List<Producto>? todosLosProductos;
    private List<Producto> productosFiltrados = new();
    private Producto productoModel = new();
    private Producto? productoAEliminar;
    private bool editando = false;
    private List<Categoria> listaCategorias = new();
    private Categoria nuevaCategoriaModel = new();

    protected override async Task OnInitializedAsync()
    {
         if (AuthService.EmpleadoActual == null)
        {
            NavManager.NavigateTo("/login");
            return;
        }
        if (AuthService.EmpleadoActual.Puesto == "en espera")
        {
            _ = Notifier.SetMessage("Acceso no autorizado. Por favor, espera a que un Admin te conceda el acceso.", "warning", 3000);
            NavManager.NavigateTo("/");
            return;
        }
        await Task.WhenAll(CargarProductos(), CargarCategorias());
    }

    private async Task CargarProductos()
    {
        using var db = DbFactory.CreateDbContext();
        todosLosProductos = await db.Productos.AsNoTracking().OrderBy(p => p.Nombre).ToListAsync();
        productosFiltrados = todosLosProductos.ToList();
    }
    private async Task HandleKeyUp(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            await BuscarParaEditar();
        }
    }
    private void AlEscribir(ChangeEventArgs e)
    {
        terminoBusqueda = e.Value?.ToString() ?? "";
        var todosLosProductosSeguro = todosLosProductos ?? new List<Producto>();

        if (string.IsNullOrWhiteSpace(terminoBusqueda))
        {
            productosFiltrados = todosLosProductosSeguro.ToList();
        }
        else
        {
            productosFiltrados = todosLosProductosSeguro
                .Where(p => p.Nombre.Contains(terminoBusqueda, StringComparison.OrdinalIgnoreCase) ||
                            (p.CodigoSku != null && p.CodigoSku.Contains(terminoBusqueda, StringComparison.OrdinalIgnoreCase)))
                .ToList();
        }
    }
    private async Task BuscarParaEditar()
    {
        if(string.IsNullOrEmpty(terminoBusqueda))
        {
            return;
        }

        var todosLosProductosSeguro = todosLosProductos ?? new List<Producto>();

        var matchExacto = todosLosProductosSeguro
            .FirstOrDefault(p => p.CodigoSku != null && p.CodigoSku.Equals(terminoBusqueda, StringComparison.OrdinalIgnoreCase));
            
         if (matchExacto != null)
        {
            terminoBusqueda = "";
            productosFiltrados = todosLosProductosSeguro.ToList();
            await PrepararEdicion(matchExacto);
        }
        else
        {
           _ = Notifier.SetMessage("No se encontró ningún producto con el código SKU proporcionado.", "warning");
        }
    }

    private void LimpiarBusqueda()
    {
        terminoBusqueda = "";
        productosFiltrados = todosLosProductos?.ToList() ?? new List<Producto>();
    }
    private async Task IniciarNuevoProducto()
    {
        productoModel = new();
        editando = false;
        await JSRuntime.InvokeVoidAsync("bootstrapModalFunctions.show", "productoModal");
    }

    private async Task PrepararEdicion(Producto productoAEditar)
    {
        // Crear una copia para editar sin afectar la lista visual inmediatamente
        productoModel = new Producto
        {
            ProductoId = productoAEditar.ProductoId,
            Nombre = productoAEditar.Nombre,
            PrecioVenta = productoAEditar.PrecioVenta,
            StockActual = productoAEditar.StockActual,
            Descripcion = productoAEditar.Descripcion,
            PrecioCompra = productoAEditar.PrecioCompra,
            CategoriaId = productoAEditar.CategoriaId,
            CodigoSku = productoAEditar.CodigoSku
        };
        editando = true;
        await JSRuntime.InvokeVoidAsync("bootstrapModalFunctions.show", "productoModal");
    }

    private async Task CerrarModal()
    {
        await JSRuntime.InvokeVoidAsync("bootstrapModalFunctions.hide", "productoModal");
        await Task.Delay(300);
        productoModel = new();
        editando = false;
    }

    private async Task GuardarProducto()
    {
        using var db = DbFactory.CreateDbContext();

        if (editando)
        {
            db.Productos.Update(productoModel);
        }
        else
        {
            await db.Productos.AddAsync(productoModel);
        }

        await db.SaveChangesAsync();
        await CargarProductos();
        await CerrarModal();
    }
    private async Task CargarCategorias()
    {
        using var db = DbFactory.CreateDbContext();
        listaCategorias = await db.Categorias.AsNoTracking().OrderBy(c => c.Nombre).ToListAsync();
    }

    private async Task AbrirModalCategoria()
    {
        nuevaCategoriaModel = new();
        await JSRuntime.InvokeVoidAsync("bootstrapModalFunctions.show", "categoriaModal");
    }

    private async Task CerrarModalCategoria()
    {
        await JSRuntime.InvokeVoidAsync("bootstrapModalFunctions.hide", "categoriaModal");
    }
 
    private async Task GuardarCategoriaRapida()
    {
        if (string.IsNullOrWhiteSpace(nuevaCategoriaModel.Nombre)) return;

        using var db = DbFactory.CreateDbContext();
        db.Categorias.Add(nuevaCategoriaModel);
        await db.SaveChangesAsync();

        // Recargar la lista para que aparezca en el dropdown
        await CargarCategorias();
        
        // Seleccionar automáticamente la categoría recién creada en el producto
        productoModel.CategoriaId = nuevaCategoriaModel.CategoriaId;

        await CerrarModalCategoria();
        
        // Notificación opcional
        _ = Notifier.SetMessage("Categoría creada exitosamente", "success");
    }

    private async Task SolicitarEliminacion(Producto producto)
    {
        productoAEliminar = producto;
        await JSRuntime.InvokeVoidAsync("bootstrapModalFunctions.show", "confirmarEliminacionModal");
    }
    private async Task ConfirmarEliminacion()
    {
        if (productoAEliminar == null) return;

        try
        {
            using var db = DbFactory.CreateDbContext();
            var producto = await db.Productos.FindAsync(productoAEliminar.ProductoId);
            if (producto != null)
            {
                db.Productos.Remove(producto);
                await db.SaveChangesAsync();
                _ = Notifier.SetMessage($"El producto '{productoAEliminar.Nombre}' ha sido eliminado exitosamente.", "success");
                await CargarProductos();
            }
        }
        catch (Exception ex)
        {
            _ = Notifier.SetMessage("Error al eliminar el producto: " + ex.Message, "danger", 5000);
        }
        finally
        {
            productoAEliminar = null;
            await CerrarModalEliminacion();
        }
    }
    private async Task CerrarModalEliminacion()
    {
        await JSRuntime.InvokeVoidAsync("bootstrapModalFunctions.hide", "confirmarEliminacionModal");
        productoAEliminar = null;
    }
}
